{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt && cd ode_gui_bundle && (npm ci || npm i) && npm run build"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "uvicorn scripts.production_server:app --host 0.0.0.0 --port $PORT --lifespan on --workers 1",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environmentVariables": {
    "GUI_BUNDLE_DIR": "ode_gui_bundle/dist",
    "ENABLE_WEBSOCKET": "true",
    "PUBLIC_READ": "true",
    "NIXPACKS_NODE_VERSION": "20",
    "NIXPACKS_PYTHON_VERSION": "3.11",
    "API_KEYS": "railway-key,dev-key",
    "ALLOWED_ORIGINS": "https://ode-gui.up.railway.app,http://localhost:3000"
  }
}
